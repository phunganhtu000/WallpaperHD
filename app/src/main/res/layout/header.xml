    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iconhd" />

    <TextView
